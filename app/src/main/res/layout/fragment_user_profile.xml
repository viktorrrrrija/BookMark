<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.UserProfile"
    android:background="@color/background">
<RelativeLayout
    android:id="@+id/RlActionBar"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@color/background">

    <ImageView
        android:id="@+id/IVBackToolBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/back"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/TVEditToolBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_edit_24"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_centerVertical="true"

        />
</RelativeLayout>
    <LinearLayout
        android:id="@+id/LlData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RlActionBar"
        android:background="@color/background"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/UserProfileImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/user2"/>

        <TextView
            android:id="@+id/UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textStyle="bold"
            android:textColor="@color/brown"
            android:layout_gravity="center"
            android:textSize="25sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <!--Bookshelves data-->
        <!--<LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bookshelves"
                android:textColor="@color/brown"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/TVBookshelvesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textColor="@color/brown"
                android:textStyle="bold"/>


        </LinearLayout>-->

            <!--Reading Goal data-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reading Goal"
                    android:textColor="@color/brown"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/TVReadingGoalData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textColor="@color/brown"
                    android:textStyle="bold"/>


            </LinearLayout>

            <!--Member since data-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Member Since"
                    android:textColor="@color/brown"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/TVMemberSinceData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textColor="@color/brown"
                    android:textStyle="bold"/>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

<TextView
    android:id="@+id/TVSignOut"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Sign Out"
    android:textColor="@color/red"
    android:textStyle="bold"
    android:textSize="17sp"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    android:padding="10dp"
    />
</RelativeLayout>